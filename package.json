{
  "name": "appium-mcp-server",
  "version": "1.0.0",
  "description": "Comprehensive Appium MCP Server with full mobile automation functionality for iOS and Android testing",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "appium-mcp-server": "./wrapper.cjs"
  },
  "files": [
    "dist/",
    "wrapper.cjs",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "prepublishOnly": "npm run build",
    "clean": "rimraf dist",
    "build:clean": "npm run clean && npm run build",
    "test": "vitest",
    "lint": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "appium",
    "mobile",
    "automation",
    "testing",
    "ios",
    "android",
    "mobile-testing",
    "model-context-protocol",
    "typescript",
    "uiautomator2",
    "xcuitest",
    "mobile-automation"
  ],
  "author": {
    "name": "Isaac Agbobli"
  },
  "license": "MIT",
  "homepage": "",
  "repository": {
    "type": "git",
    "url": ""
  },
  "bugs": {
    "url": "https://github.com/agbobli5373/appium-mcp-server/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "appium": "^2.2.1",
    "webdriverio": "^8.21.0",
    "appium-uiautomator2-driver": "^2.34.1",
    "appium-xcuitest-driver": "^5.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4",
    "appium-doctor": "^1.16.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "linux",
    "win32",
    "darwin"
  ]
}
